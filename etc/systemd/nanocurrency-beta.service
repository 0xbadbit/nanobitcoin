[Unit]
Description=Nanobitcoin Beta Network Daemon
After=network.target

[Service]
Type=simple
User=nanobitcoin
WorkingDirectory=/var/nanobitcoin/NanobitcoinBeta
ExecStart=/usr/bin/nanobitcoin_node --daemon --network=beta --data_path=/var/nanobitcoin/NanobitcoinBeta
Restart=on-failure

[Install]
WantedBy=multi-user.target
